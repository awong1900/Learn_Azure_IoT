<Page
    x:Class="HelloAzureRaspi.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HelloAzureRaspi"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource AppBarItemForegroundThemeBrush}">
        <Viewbox>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="Temperature" Text="Temp: Not initialized!" TextWrapping="Wrap" Foreground="#FF0000FF" FontSize="5"/>
                <TextBlock x:Name="Humidity" Text="Humi:Not initialized!" TextWrapping="Wrap" Foreground="#FF0000FF" FontSize="5"/>
                <TextBlock x:Name="SoundSensor" Text="SoundSensor:Not initialized!" TextWrapping="Wrap" Foreground="#FF0000FF" FontSize="5"/>
                <!--<TextBox x:Name="Button" Margin="10" Foreground="#FF00FF" />-->
                <TextBlock x:Name="Accelemeter" Text="Accelemeter:Not initialized!" TextWrapping="Wrap" Foreground="#FF0000FF" FontSize="5"/>
            </StackPanel>
        </Viewbox>
    </Grid>
</Page>
